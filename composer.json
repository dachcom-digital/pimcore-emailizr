{
    "name": "dachcom-digital/emailizr",
    "type": "pimcore-bundle",
    "license": "GPL-3.0-or-later",
    "description": "Pimcore Emailizr - create html emails the right way!",
    "keywords": ["pimcore", "email", "inky", "inline style"],
    "homepage": "https://github.com/dachcom-digital/pimcore-emailizr",
    "authors": [
        {
            "name": "DACHCOM.DIGITAL Stefan Hagspiel",
            "email": "shagspiel@dachcom.ch",
            "homepage": "http://www.dachcom.com/",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "EmailizrBundle\\": "src/EmailizrBundle"
        }
    },
    "extra": {
        "pimcore": {
            "bundles": [
                "EmailizrBundle\\EmailizrBundle"
            ]
        }
    },
    "require": {
        "pimcore/pimcore": "^5.4.0 | ^6.3.0 | ^7.0.0",
        "lorenzo/pinky": "^1.0.3",
        "pelago/emogrifier": "^4.0 | ^5.0"
    },
    "conflict": {
        "symfony/monolog-bundle": "3.6.0"
    },
    "require-dev": {
        "codeception/codeception": "~2.3.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-symfony": "^0.12",
        "symplify/easy-coding-standard": "^5.4"
    }
}
